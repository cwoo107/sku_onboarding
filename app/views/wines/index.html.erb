<p id="notice"><%= notice %></p>

<h1>Wines</h1>
<div class="table-responsive">
  <table class="table table-striped table-hover ">
    <thead>
    <tr>
      <th scope="col">SKU</th>
      <th scope="col">Country</th>
      <th scope="col">Style</th>
      <th scope="col">Btl Size</th>
      <th scope="col">Grape</th>
      <th scope="col">Vintage</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @wines.each do |wine| %>
      <tr scope="row">
        <td style="font-weight: bold;"><%= wine.sku %></td>
        <td><%= wine.country %></td>
        <td><%= wine.style %></td>
        <td><%= wine.btl_size %></td>
        <td><%= wine.grape_variety %></td>
        <td><%= wine.vintage %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Delete', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<br>

<%= link_to 'New Wine', new_wine_path, class: 'btn btn-sm btn-secondary' %>


