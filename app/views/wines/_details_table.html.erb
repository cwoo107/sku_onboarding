<div class="table-responsive">
  <table class="table table-hover ">
    <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Country</th>
      <th scope="col">Style</th>
      <th scope="col">Btl_Size</th>
      <th scope="col">Grape</th>
      <th scope="col">Vintage</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% wines.each do |wine| %>
      <tr scope="row">
        <td style="font-weight: bold;"><%= wine.sku %></td>
        <td><%= wine.country %></td>
        <td><%= wine.style %></td>
        <td><%= wine.btl_size %></td>
        <td><%= wine.grape_variety %></td>
        <td><%= wine.vintage %></td>
        <td><%= link_to 'Delete', wine, method: :delete, data: { confirm: 'Are you sure?' },
                        class: '
              my-0 py-2 px-4 mx-0
              text-red-600
              hover:text-red-800' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>